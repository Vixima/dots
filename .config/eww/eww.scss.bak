// Unsetting everything. Aw shit, here we go again.
* {
  all: unset;
  font-family: "Cozette";
  font-size: 13px;
}

// Colours
$bg:        #17181C;
$midBG:     #1E1F24;
$lightBG:   #26272B;
$darkGrey:  #333438;
$lightGrey: #8F9093;
$darkFG:    #B0B1B4;
$midFG:     #CBCCCE;
$fg:        #E4E5E7;
$pink:      #FA3867;
$orange:    #F3872F;
$gold:      #FEBD16;
$lime:      #3FD43B;
$turquoise: #47E7CE;
$blue:      #53ADE1;
$violet:    #AD60FF;
$red:       #FC3F2C;

.bar {
    border-radius: 36px;
    box-shadow: 0px 0px 16px -1px rgba(0, 0, 0, 0.25);
}

.barContainer {
    color: $fg;
    background-color: $bg;
    border-radius: 36px;
    padding: 6px;
}

.barCCButton {
    background-color: $midBG;
    border-radius: 36px;
    min-width: 24px;
    padding-top: 5px;
    padding-bottom: 5px;
}

.barWorkspaces {
    background-color: $midBG;
    border-radius: 36px;
    min-width: 24px;
    padding-top: 5px;
    padding-bottom: 5px;
}

.barInfo {
    background-color: $midBG;
    border-radius: 36px;
    min-width: 24px;
    padding-top: 6px;
    padding-bottom: 6px;
}

.ccContainer {
    background-color: $bg;
    border-radius: 14px;
    padding: 6px;
}
